<div class="container">
    <div class="row">
        <div class="text-center col-sm-12">
            <h1 class="text-center">Eat-Da-Burger!</h1>
            <p></p>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <br>
            <h2>Burgers Available To Eat!</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}
                    <button class="btn-primary devour" data-id="{{id}}" data-devoured="{{devoured}}">Devour It!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <br>
            <h2>Burgers That Have Been Eaten!</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div>
    </div>
    <div class="row">
        <div class="center col-sm-12">
            <hr>
            <h2>Add A Burger!</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="burger">Burger Name:</label>
                    <input type="text" id="burger" name="name">
                </div>
                <button class="btn-primary" type="submit">Add Burger</button>
            </form>
